<view class="main">
  <van-row wx:for="{{goods}}">
    <van-col span="2">
      <view class="left-checkbox">
        <van-checkbox value="{{ item.is_checked }}" id="{{item.id}}" bind:change="oneSelect"></van-checkbox>
      </view>
    </van-col>
    <van-col span="22">
      <van-card
              price="{{item.goods.price}}"
              title="{{item.goods.title}}"
              desc="{{item.goods.description}}"
              thumb="{{item.goods.cover_url}}"
      >
        <van-stepper class="num" slot="num" value="{{ item.num }}" id="{{item.id}}" bind:change="numChange"/>
      </van-card>
    </van-col>
  </van-row>
</view>

<van-submit-bar
        price="{{ allPrice }}"
        button-text="提交订单"
        bind:submit="onClickButton"
        tip="{{ true }}"
>
    <van-checkbox value="{{ checkedAll }}" bind:change="allSelect">全选</van-checkbox>
</van-submit-bar>