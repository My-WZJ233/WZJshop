<navigator hover-class="none" url="/pages/goodsinfo/goodsinfo?id={{goods.id}}">
    <image
            style="width: 100%; height: 280rpx;"
            src="{{goods.cover_url}}"
    />
    <view class="title text-truncate">{{goods.title}}</view>
    <view class="info">
        <text class="price">￥{{goods.price}}</text>
        <text class="buy">{{goods.sales}}人购买</text>
    </view>
</navigator>